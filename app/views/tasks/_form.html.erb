<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
  <%# grid system : put "col-hoge-num" in ".row"; row's width is 12 column  %>
  <%# .row にはdisplay: table, content: " ", clear: both のclearfixがついているよう
      https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.css
  %>
    <%= form_for(task) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
    
      <div class="form-group">
        <%# form-groupをつけたdivのデフォルトは margin-bottom: 15 のようだ %>
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
    
      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>